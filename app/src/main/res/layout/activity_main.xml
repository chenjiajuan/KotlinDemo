<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cjj.kotlindemo.MainActivity">

    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.cjj.kotlindemo.view.AutoSplitTextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="【Aption】天天Intall特价满300减20"
        android:maxLines="2"
        android:ellipsize="end"

        />
    <FrameLayout
        android:id="@+id/viewGroupLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></FrameLayout>
 <!--

 <attr name="starImageSize" format="dimension"></attr>
        <attr name="starCount" format="integer"></attr>
        <attr name="startFillImage" format="reference"></attr>
        <attr name="starEmptyImage" format="reference"></attr>
        <attr name="starHalfImage" format="reference"></attr>
        <attr name="starPadding" format="dimension"/>
 !-->
    <com.cjj.kotlindemo.view.RatingBar
        android:layout_width="200dp"
        android:layout_height="40dp"
        app:starCount="5"
        app:starImageSize="20dp"
        app:startFillImage="@drawable/frodo_rate_star_small_on_holo_light"
        app:starEmptyImage="@drawable/frodo_rate_star_small_off_holo_light"
        app:starHalfImage="@drawable/frodo_rate_star_small_half_holo_light"
        app:starPadding="@dimen/dp_5"
        >
    </com.cjj.kotlindemo.view.RatingBar>




</LinearLayout>
